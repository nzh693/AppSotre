<?xml version="1.0" encoding="utf-8"?>
<!--游戏悬浮5 预订-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/todayimagebg"
        >

        //app1 内容
        <LinearLayout
            android:id="@+id/Rlayout_app1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                //app图标
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/riv-1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/game_3"
                    app:riv_corner_radius_bottom_left="50dp"
                    app:riv_corner_radius_top_left="50dp"
                    app:riv_corner_radius_bottom_right="50dp"
                    app:riv_corner_radius_top_right="50dp"
                    android:layout_marginTop="8dp"
                    >
                </com.makeramen.roundedimageview.RoundedImageView>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/riv-1"
                    >


                    <TextView
                        android:id="@+id/tv_1_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="少年三国志2-升级就送FMVP"
                        android:textSize="18dp"
                        android:textColor="@color/colorDeepBalck"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/tv_1_subMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高福利卡牌王者续作"
                        android:textSize="15dp"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/tv_1_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预定"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlue"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        >

                    </TextView>

                    <Button
                        android:id="@+id/btm_get_1"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="获取"
                        android:textSize="15dp"
                        android:textColor="@color/colorBlue"
                        android:background="@drawable/button_getbg"
                        android:layout_marginTop="7dp"
                        >
                    </Button>
                </LinearLayout>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="60dp"
                android:background="@color/colorDarkBalck"
                android:layout_below="@id/Rlayout_app1"
                android:layout_marginTop="10dp"
                >
            </View>

        </LinearLayout>


        //app2 内容
        <LinearLayout
            android:id="@+id/Rlayout_app2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/Rlayout_app1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                //app图标
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/riv-2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/game_2"
                    app:riv_corner_radius_bottom_left="50dp"
                    app:riv_corner_radius_top_left="50dp"
                    app:riv_corner_radius_bottom_right="50dp"
                    app:riv_corner_radius_top_right="50dp"
                    android:layout_marginTop="8dp"

                    >
                </com.makeramen.roundedimageview.RoundedImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/riv-1"
                    >


                    <TextView
                        android:id="@+id/tv_2_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="少年三国志2-升级就送FMVP"
                        android:textSize="18dp"
                        android:textColor="@color/colorDeepBalck"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/tv_2_subMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高福利卡牌王者续作"
                        android:textSize="15dp"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        >

                    </TextView>
                    <TextView
                        android:id="@+id/tv_2_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预定"
                        android:textSize="14dp"
                        android:textColor="@color/colorBlue"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        >

                    </TextView>

                    <Button
                        android:id="@+id/btm_get_2"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="￥18.88"
                        android:textSize="15dp"
                        android:textColor="@color/colorBlue"
                        android:background="@drawable/button_getbg"
                        android:layout_marginTop="7dp"
                        >
                    </Button>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>






    </RelativeLayout>

</LinearLayout>