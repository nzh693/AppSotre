<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/colorWhite"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/Acount_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple ID"
                android:textSize="16dp"
                android:textColor="@color/colorDeepBalck"
                android:layout_weight="1"
                >
            </TextView>

            <EditText
                android:id="@+id/Acount_acount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@null"
                android:textSize="14dp"
                android:hint="Apple ID"
                >

            </EditText>
        </LinearLayout>




        <View
            android:id="@+id/Acount_line2"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/colorDarkBalck"
            android:layout_marginTop="10dp"
            >

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="密码"
                android:textColor="@color/colorDeepBalck"
                android:textSize="16dp">

            </TextView>

            <EditText
                android:id="@+id/Acount_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_weight="7"
                android:hint="必填"
                android:textSize="14dp"
                android:inputType="textPassword"
                >
            </EditText>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"

        >


        <TextView
            android:id="@+id/Acount_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="登录"
            android:background="@color/colorWhite"
            android:textColor="@color/colorMaxlitterDark"
            android:textSize="16dp">

        </TextView>

        <TextView
                android:id="@+id/Acount_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记Apple ID 或密码？"
                android:paddingTop="8dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorBlue"
                android:textSize="14dp"
                android:background="@color/colorlitterDark"
                android:layout_gravity="center"

                >

        </TextView>
    </LinearLayout>


    <TextView
        android:id="@+id/show_data"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="数据库"
        android:textSize="18dp"
        android:visibility="gone">

    </TextView>

    <Button
        android:id="@+id/data_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:text="插入"

        >

    </Button>

    <Button
        android:id="@+id/data_deleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="删除所有">

    </Button>
</LinearLayout>