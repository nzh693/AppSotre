<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_getbg"
        >

        <LinearLayout
            android:id="@+id/detail_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享 App..."
                android:layout_marginTop="7dp"
                android:textColor="@color/colorBlue"
                android:textSize="20dp"
                >


            </TextView>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/app_detailshare"
                android:scaleType="centerCrop"
                android:layout_marginLeft="220dp"
                >

            </ImageView>

        </LinearLayout>

        <View
            android:id="@+id/detail_pop_line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/colorBalckground"
            android:layout_below="@+id/detail_pop"
            >

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_below="@+id/detail_pop"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多来自此来发者的App"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorBlue"
                android:textSize="20dp"
                >


            </TextView>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/personal"
                android:layout_marginLeft="100dp"
                >

            </ImageView>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail_popWindow_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_getbg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="25sp"
            android:textColor="@color/colorBlue"
            android:layout_gravity="center"
            >


        </TextView>
    </LinearLayout>



</LinearLayout>